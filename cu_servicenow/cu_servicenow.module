function cu_servicenow_config_form($form, &$form_state) {
  $form = [];

  $form['sn_environment'] = [
    '#type' => 'select',
    '#title' => t('Environment'),
    '#options' => [
      'https://coloradosandbox.service-now.com' => t('Sandbox'),
